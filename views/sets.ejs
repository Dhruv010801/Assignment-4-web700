<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>LEGO Sets Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Include the navbar partial -->
    <%- include('partials/navbar', { page: '/lego/sets' }) %>

    <div class="container mt-4">
        <h1>LEGO Sets Collection</h1>
        <ul class="list-group">
            <% sets.forEach(set => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= set.name %></strong> (Set Number: <%= set.set_num %>) - Theme: <%= set.theme %>
                    </div>
                    <div>
                        <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary btn-sm me-2">View</a>
                        <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
